{
  "name": "app-tomcat",
  "description": "Creates a base tomcat instance to deploy an application",
  "default_attributes": {
    "server_affix": "app-server",
    "maven": {
      "maven_args": "-Pmysql"
    }
  },
  "run_list": [
    "recipe[apt]",
    "recipe[my-tomcat::logrotate]",
    "recipe[my-tomcat::tomcat_app]"
  ]
}